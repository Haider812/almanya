<md-content ng-controller="DealCtrl">

		<md-title>	
		<h2> DEALS </h2>
		</md-title>
		<br>
		
	<md-table-toolbar>
		<div layout="row">
		
			<md-content flex-gt-md="65" flex="100" style="overflow: hidden">
				<br>
				<div layout-gt-sm="row" class="filter-bar">
					<md-input-container class="md-block" flex-gt-xs>
						<label>Suche nach Titel</label>
						<input type="text" ng-model="query.filter"
							ng-model-options="{ debounce: 1000 }" ng-change="onQueryChange()">
					</md-input-container>

					<md-input-container class="md-block" flex-gt-xs>
						<label>Kategorien</label>
						<md-select ng-model="query.category" ng-change="onQueryChange()">
							<md-option value="">
								Alle 
							</md-option>
							<md-option ng-value="category" value="{{ category }}"
								ng-repeat="category in categories">
								{{ category.title }}
							</md-option>
						</md-select>
					</md-input-container>
					<md-input-container class="md-block" flex-gt-xs>
						<label>Status</label>
						<md-select ng-model="query.status" ng-change="onQueryChange()">
							<md-option value="">
								Alle
							</md-option>
							<md-option value="pending">
								Ausstehend
							</md-option>
							<md-option value="approved">
								Genehmigt
							</md-option>
							<md-option value="rejected">
								Abgelehnt
							</md-option>
							<md-option value="expired">
								Abgelaufen
							</md-option>
							<md-option value="expireInTenDays">
								Läuft in 10 Tagen ab
							</md-option>
							<md-option value="expireInThirtyDays">
								Läuft in 30 Tagen ab
							</md-option>
						</md-select>
					</md-input-container>
					<md-datepicker ng-model="query.date" ng-change="onQueryChange()"
						md-placeholder="Enter date" flex-gt-xs>
					</md-datepicker>
				</div>
			</md-content>
		</div>
	</md-table-toolbar>

	<md-table-container>
	  <table md-table md-progress="promise">
	    <thead md-head>
	      <tr md-row>
	      	<th md-column></th>
	        <th md-column>Titel</th>
	        <th md-column>Kategorie</th>
	        <th md-column>Status</th>
					<th md-column>Ablauf</th>
					<th md-column>Eintrag </th>
			<th name="Actions">
	      </tr>
	    </thead>
	    <tbody md-body>
	      <tr md-row ng-repeat="deal in deals">
	      	<td md-cell>
	      		<img class="img-thumb img-circle" ng-src="/images/placeholder.png"
						actual-src="{{ deal.imageThumb.url() }}" />
	      	</td>
	      	<td md-cell>{{:: deal.title }}</td>
	        <td md-cell>{{:: deal.category.get('title') }}</td>
					<td md-cell>
						<span class="label"
						  ng-class="{ 'green': deal.getStatus() === 'Genehmigt',
							'red': deal.getStatus() === 'Abgelehnt',
							'orange': deal.getStatus() === 'Abgelaufen',
						  'yellow': deal.getStatus() === 'Ausstehend' }">
						  {{ deal.getStatus() }}
						</span>
					</td>
					<td md-cell>
						<span ng-if="isDate(deal.expiresAt)">
							{{ deal.expiresAt | date:'mediumDate' }}
						</span>
					</td>
					<td md-cell>{{ deal.createdAt | date:'mediumDate' }}</td>
	        <td md-cell>
				<md-menu>
			      <md-button aria-label="Open menu" class="md-icon-button"
			        ng-click="openMenu($mdOpenMenu, $event)">
			        <ng-md-icon md-menu-origin icon="more_vert"
			          layout="row" layout-align="start center">
			        </ng-md-icon>
			      </md-button>
			      <md-menu-content width="3">

			        <md-menu-item>
			          <md-button aria-label="Edit deal"
								  ng-click="onUpdateDeal($event, deal)">
			            Bearbeiten
			          </md-button>
			        </md-menu-item>

			        <md-menu-item aria-label="Delete deal">
			          <md-button aria-label="Delete deal"
								  ng-click="onDestroyDeal($event, deal)">
			            Löschen
			          </md-button>
			        </md-menu-item>

							<md-divider></md-divider>

							<md-menu-item>
			          <md-button aria-label="Approve deal"
								  ng-click="onUpdateIsApproved(deal, true)">
			            Genehmigen
			          </md-button>
			        </md-menu-item>

							<md-menu-item>
								<md-button aria-label="Approve deal for # days"
								  ng-click="onUpdateExpiresAt($event, deal)">
									Genehmigen # Tage
								</md-button>
							</md-menu-item>

							<md-menu-item>
			          <md-button aria-label="Reject deal"
								  ng-click="onUpdateIsApproved(deal, false)">
			            Ablehnen
			          </md-button>
			        </md-menu-item>

			      </md-menu-content>
			    </md-menu>
	        </td>
	      </tr>
	    </tbody>
	  </table>
	</md-table-container>
	<md-table-pagination md-options="rowOptions" md-limit="query.limit"
	  md-page="query.page" md-total="{{query.total}}"
		md-on-paginate="onPaginationChange">
	</md-table-pagination>

  <md-button class="md-fab md-primary md-fab-bottom-right"
    aria-label="New Deal" ng-click="onCreateDeal($event)">
    <ng-md-icon class="icon-add" icon="add"
      layout="column" layout-align="center center">
    </ng-md-icon>
  </md-button>
</md-content>
