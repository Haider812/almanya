<md-content ng-controller="menuIconCtrl">

	<md-title>	
		<h2> ICONS VERWALTEN </h2>
		</md-title>
		<br>
		
 	<md-table-toolbar>
    
  </md-table-toolbar>
	<md-table-container>
	  <table md-table md-progress="promise">
	    <thead md-head md-order="query.order" md-trigger="onOrderChange">
	      <tr md-row>
          <th md-column>Icon</th>
	      <th md-column>Menüpunkt</th>
	      <th md-column></th>
	      </tr>
	    </thead>
	    <tbody md-body>
	      <tr md-row ng-repeat="menuIcon in menuicons">
          <td md-cell>
	      		<img width="32" height="32" ng-src="/images/placeholder.png"
              actual-src="{{ menuIcon.icon.url() }}" />
	      	</td>
	        <td md-cell>{{:: menuIcon.title }}</td>
	        <td md-cell>
				<md-menu>
			      <md-button aria-label="Open menu" class="md-icon-button"
			        ng-click="openMenu($mdOpenMenu, $event)">
			        <ng-md-icon md-menu-origin icon="more_vert"
			          layout="row" layout-align="start center">
			        </ng-md-icon>
			      </md-button>
			      <md-menu-content width="3">

			        <md-menu-item>
			          <md-button aria-label="Bearbeiten"
								  ng-click="onEditmenuIcon($event, menuIcon)">
			            Bearbeiten
			          </md-button>
			        </md-menu-item>

			        <md-menu-item>
			          <md-button aria-label="Löschen"
								  ng-click="onDestroymenuIcon($event, menuIcon)">
			          Löschen
			          </md-button>
			        </md-menu-item>

			      </md-menu-content>
			    </md-menu>
	        </td>
	      </tr>
	    </tbody>
	  </table>
	</md-table-container>
	<md-table-pagination md-options="rowOptions" md-limit="query.limit"
	  md-page="query.page" md-total="{{query.total}}"
    md-on-paginate="onPaginationChange">
	</md-table-pagination>
  <md-button class="md-fab md-primary md-fab-bottom-right"
    aria-label="New category" ng-click="onNewmenuIcon($event)">
    <ng-md-icon class="icon-add" icon="add"
      layout="column" layout-align="center center">
    </ng-md-icon>
  </md-button>
</md-content>
